<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>terracotta-tools-parent</artifactId>
		<groupId>org.gridkit.terracotta-tools</groupId>
		<version>1.0-SNAPSHOT</version>
	</parent>
	<groupId>org.gridkit.terracotta-tools</groupId>
	<artifactId>ehcache-stats</artifactId>
	<version>1.0-SNAPSHOT</version>
	<name>ehcache-stats</name>
	<description>Real-time aggregated statistics library for Terracotta Ehcache</description>
	
	<properties>
		<ehcache.version>2.4.5</ehcache.version>
		<junit.version>4.9</junit.version>
		<slf4j.version>1.6.2</slf4j.version>
		<logback.version>0.9.29</logback.version>
	</properties>
	
	<profiles>
		<!-- Default profile, utilizing OpenSource Ehcache and Terracotta -->
		<profile>
			<id>opensource</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<dependencies>
				<dependency>
					<groupId>net.sf.ehcache</groupId>
					<artifactId>ehcache-core</artifactId>
					<version>${ehcache.version}</version>
				</dependency>
			</dependencies>
		</profile>
		
		<!-- Enables Enterprise Edidion dependencies for Ehcache and Terracotta -->
		<profile>
			<id>ee</id>
			<dependencies>
				<dependency>
					<groupId>net.sf.ehcache</groupId>
					<artifactId>ehcache-core-ee</artifactId>
					<version>${ehcache.version}</version>
				</dependency>
			</dependencies>
		</profile>
	</profiles>
	
	<dependencies>
		<!-- Test dependencies -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit.version}</version>
			<scope>test</scope>
		</dependency>
		
		<!-- Logging is in test scope too -->
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>${slf4j.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>ch.qos.logback</groupId>
			<artifactId>logback-classic</artifactId>
			<version>${logback.version}</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
</project>
