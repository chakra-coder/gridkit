<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
       default-lazy-init="true"
>

	<import resource="/coherence-beans.xml"/>

	<bean id="log-map" class="java.util.concurrent.ConcurrentHashMap"/>

	<bean id="member-listener1" class="org.gridkit.coherence.integration.spring.service.ServiceListenersTest.LogMemberListener">
		<property name="log" ref="log-map"/>
	</bean>

	<bean id="member-listener2" class="org.gridkit.coherence.integration.spring.service.ServiceListenersTest.LogMemberListener">
		<property name="log" ref="log-map"/>
	</bean>

	<bean id="member-listener3" class="org.gridkit.coherence.integration.spring.service.ServiceListenersTest.LogMemberListener">
		<property name="log" ref="log-map"/>
	</bean>

	<bean id="service-listener1" class="org.gridkit.coherence.integration.spring.service.ServiceListenersTest.LogServiceListener">
		<property name="log" ref="log-map"/>
	</bean>

	<bean id="service-listener2" class="org.gridkit.coherence.integration.spring.service.ServiceListenersTest.LogServiceListener">
		<property name="log" ref="log-map"/>
	</bean>

	<bean id="service-listener3" class="org.gridkit.coherence.integration.spring.service.ServiceListenersTest.LogServiceListener">
		<property name="log" ref="log-map"/>
	</bean>

	<bean id="cache-service" parent="service-reference" factory-bean="default.distributed.service"/>
	
	<bean id="default.distributed.service" parent="clustered-cache-service">
		<property name="serviceName" value="DistributedCache" />
		<property name="configuration">
			<bean parent="distribted-scheme-configuration">
				<property name="localStorage" value="true"/>
			</bean>
		</property>
		<property name="memberListener" ref="member-listener1"/>
		<property name="serviceListener" ref="service-listener1"/>
	</bean>
	

	<bean id="exec-service" parent="service-reference" factory-bean="invocation-service"/>
	
	<bean id="invocation-service" parent="clustered-service">
		<property name="configuration">
			<bean parent="invocation-service-configuration">
				<property name="threadCount" value="5"/>
			</bean>
		</property>
		<property name="memberListener">
			<bean parent="member-listener-collection">
				<property name="list">
					<list>
						<ref local="member-listener2"/>
						<ref local="member-listener3"/>
					</list>
				</property>
			</bean>
		</property>
		<property name="serviceListener">
			<bean parent="service-listener-collection">
				<property name="list">
					<list>
						<ref local="service-listener2"/>
						<ref local="service-listener3"/>
					</list>
				</property>
			</bean>
		</property>
	</bean>
		
</beans>
