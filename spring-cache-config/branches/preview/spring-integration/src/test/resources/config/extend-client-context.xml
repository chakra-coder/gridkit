<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
       default-lazy-init="true">

	<import resource="/coherence-beans.xml"/>
	
	<!-- Actual cache defined in simple-coherence-context.xml -->
	<bean id="cache.A" parent="named-cache" factory-bean="A" lazy-init="true"/>
	<bean id="A" parent="cache-definition">
		<property name="service" ref="remote-cache-service"/>
	</bean>

	<!-- Coherence*Extend Remote Cache Service -->
	<bean id="remote-cache-service" parent="cache-service">
		<property name="serviceName" value="ExtendTcpCacheService" />
		<property name="configuration">
			<bean parent="remote-cache-scheme-configuration">
				<property name="remoteAddresses">
					<list>
						<bean parent="socket-address-config">
							<property name="host" value="localhost"/>
							<property name="port" value="9099"/>
						</bean>
						<bean parent="socket-address-config">
							<property name="host" value="localhost"/>
							<property name="port" value="9199"/>
						</bean>
					</list>
				</property>
				<property name="initiatorConnectTimeout" value="10000"/>
				<property name="initiatorRequestTimeout" value="5000"/>
			</bean>
		</property>
	</bean>

	<!-- Coherence*Extend Remote Invocation -->
	<bean id="remote-exec-service" parent="service-reference" factory-bean="remote-invocation-service"/>
	
	<bean id="remote-invocation-service" parent="clustered-service">
		<property name="serviceName" value="ExtendTcpInvocationService" />
		<property name="configuration">
			<bean parent="remote-invocation-scheme-configuration">
				<property name="remoteAddresses">
					<list>
						<bean parent="socket-address-config">
							<property name="host" value="localhost"/>
							<property name="port" value="9099"/>
						</bean>
						<bean parent="socket-address-config">
							<property name="host" value="localhost"/>
							<property name="port" value="9199"/>
						</bean>
					</list>
				</property>
				<property name="initiatorConnectTimeout" value="10000"/>
				<property name="initiatorRequestTimeout" value="5000"/>
			</bean>
		</property>
	</bean>
	
</beans>