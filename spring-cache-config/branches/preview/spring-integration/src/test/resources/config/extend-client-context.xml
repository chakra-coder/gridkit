<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
       default-lazy-init="true">

	<import resource="/coherence-beans.xml"/>
	
	<!-- Coherence*Extend Client beans -->
	
	<bean id="default.remote.cache.service" parent="clustered-cache-service">
		<property name="serviceName" value="RemoteCache" />
		<property name="configuration">
			<bean parent="remote-cache-scheme-configuration">
				<property name="initiatorConfig">
					<bean parent="initiator-configuration">
						<property name="tcpInitiator">
							<bean parent="tcp-initiator-configuration">
								<property name="remoteAddresses">
									<bean class="java.net.InetSocketAddress">
										<constructor-arg type="java.lang.String" value="localhost"/>
										<constructor-arg type="int" value="9099"/>
									</bean>
								</property>
							</bean>
						</property>
					</bean>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="cache.K" parent="named-cache" factory-bean="K" lazy-init="true"/>
	
	<bean id="K" parent="clustered-cache-definition">
		<property name="service" ref="default.remote.cache.service"/>
	</bean>

	<bean id="remote-cache-service" parent="clustered-cache-service" depends-on="default.proxy.service">
		<property name="serviceName" value="RemoteCacheSer" />
		<property name="configuration">
			<bean parent="proxy-service-configuration" />
		</property>
	</bean>
	
	<!-- 
	<bean id="remote-invocation-service" parent="clustered-service" depends-on="default.proxy.service">
		<property name="configuration">
			<bean parent="remote-invocation-service">
				<property name="threadCount" value="5"/>
			</bean>
		</property>
	</bean>
	 -->
	
</beans>