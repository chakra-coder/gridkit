<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:beans="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:coh="http://gridkit.org/schema/coherence/spring-cache-config"
       xsi:schemaLocation="
       				http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       				http://gridkit.org/schema/coherence/spring-cache-config spring-cache-config.xsd"
       default-lazy-init="true"
>

	<coh:coherence-config 
		xmlns="http://gridkit.org/schema/coherence/spring-cache-config"
		xmlns:b="http://www.springframework.org/schema/beans"
		>

		<named-cache id="cache.A" cache-name="A"/>
		<named-cache id="cache.B" cache-name="B"/>
		<named-cache id="cache.C" cache-name="C"/>
		<named-cache id="cache.D" cache-name="D"/>
		<named-cache id="cache.E" cache-name="E"/>
		<named-cache id="cache.F" cache-name="F"/>
		<named-cache id="cache.G" cache-name="G"/>
		<named-cache id="cache.H" cache-name="H"/>
		<named-cache id="cache.I" cache-name="I"/>
		<named-cache id="cache.J" cache-name="J"/>
		<!-- 
		 -->
		
		<distributed-service-scheme id="default.distributed.service" lazy-init="false">
			<service-name>DistributedCache</service-name>
			<!-- 
				<local-storage>true</local-storage>
			 -->
			<autostart>true</autostart>
		</distributed-service-scheme>
	
		<replicated-service-scheme id="default.replicated.service">
			<service-name>ReplicatedCache</service-name>		
		</replicated-service-scheme>
	
		<replicated-service-scheme id="default.optimistic.service">
			<service-name>OptimisticCache</service-name>
		</replicated-service-scheme>
	
			
		<named-cache-scheme id="A">
			<service><b:ref local="default.distributed.service"/></service>
			<back-tier><java-map/></back-tier>
		</named-cache-scheme>
	
		<named-cache-scheme id="B">
			<service><b:ref local="default.distributed.service"/></service>
			<back-tier><b:ref local="read-write-test-backend"/></back-tier>
		</named-cache-scheme>

		<named-cache-scheme id="C">
			<service><b:ref local="default.distributed.service"/></service>
			<back-tier><local-cache-scheme/></back-tier>
		</named-cache-scheme>

		<named-cache-scheme id="D">
			<service><b:ref local="default.distributed.service"/></service>
			<back-tier>
				<local-cache-scheme>
					<expiry-delay>200ms</expiry-delay>
					<flush-delay>200ms</flush-delay>
				</local-cache-scheme>
			</back-tier>
		</named-cache-scheme>

		<named-cache-scheme id="E">
			<service>
				<distributed-service-scheme>		
					<service-name>DiscributedCache2</service-name>
					<!--  
					 <local-storage>true</local-storage>
					 -->
					<serializer><b:bean class="org.gridkit.coherence.integration.BaseSimpleContextTest$CustomSerializer" /></serializer>		
				</distributed-service-scheme>
			</service>
			<back-tier><local-cache-scheme/></back-tier>
		</named-cache-scheme>

		<named-cache-scheme id="F">
			<service><b:ref local="default.distributed.service"/></service>
			<back-tier>
				<local-cache-scheme>
					<expiry-delay>200ms</expiry-delay>
					<flush-delay>200ms</flush-delay>
					<eviction-policy>
						<b:bean class="org.gridkit.coherence.integration.BaseSimpleContextTest$CustomEvictor"/>
					</eviction-policy>
				</local-cache-scheme>
			</back-tier>
		</named-cache-scheme>

		<named-cache-scheme id="G">
			<service><b:ref local="default.replicated.service"/></service>
			<back-tier><local-cache-scheme/></back-tier>
		</named-cache-scheme>

		<named-cache-scheme id="H">
			<service><b:ref local="default.optimistic.service"/></service>
			<back-tier><local-cache-scheme/></back-tier>
		</named-cache-scheme>

		<named-cache-scheme id="I">
			<front-tier><near-cache-scheme/></front-tier>
			<service><b:ref local="default.distributed.service"/></service>
			<back-tier><local-cache-scheme/></back-tier>
		</named-cache-scheme>

		<named-cache-scheme id="J">
			<front-tier><near-cache-scheme/></front-tier>
			<service><b:ref local="default.distributed.service"/></service>
			<back-tier><local-cache-scheme/></back-tier>
		</named-cache-scheme>

		<read-write-backing-map-scheme id="read-write-test-backend">
			<cachestore>
				<b:bean id="cacheStore" class="org.gridkit.coherence.integration.BaseSimpleContextTest.TestCacheLoader"/>
			</cachestore>
		</read-write-backing-map-scheme>

		<service-instance id="exec-service" scheme-name="invocation-service"/>
		
		<invocation-service-scheme id="invocation-service">
			<thread-count>5</thread-count>
		</invocation-service-scheme>
		
		<!-- Coherence*Extend proxy -->
		<proxy-service-scheme id="default.proxy.service">
			<service-name>TCPExtendProxy</service-name>
			<outgoing-message-handler request-timeout="1s"/>
			<tcp-acceptor local-host="localhost" local-port="9099"/>
			<cache-service-proxy enabled="true"/>
			<invocation-service-proxy enabled="false"/>
			<thread-count>5</thread-count>
			<autostart>true</autostart>
		</proxy-service-scheme>
		
	</coh:coherence-config>
		
</beans>
