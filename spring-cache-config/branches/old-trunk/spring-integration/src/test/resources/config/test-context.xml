<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
       
	<bean id="distributedService" class="com.griddynamics.coherence.integration.spring.service.DistributedCacheServiceFactory" lazy-init="true">
		<property name="threadCount" value="5" />
		<property name="partitionCount" value="251" />
	</bean>
	
	<bean id="distributedStoreCache" class="com.griddynamics.coherence.integration.spring.NamedCacheFactory" lazy-init="true">
		<property name="cacheDefinition" ref="distributedStore" />
	</bean>
	
	<bean id="distributedStore" class="com.griddynamics.coherence.integration.spring.ServiceCacheDefinition" lazy-init="true">
		<property name="cacheService" ref="distributedService" />
		<property name="backingMapFactory" ref="rwBackingMap" />
	</bean>
	
	<bean id="dstributedHistoryCache" class="com.griddynamics.coherence.integration.spring.NamedCacheFactory" lazy-init="true">
		<property name="cacheDefinition" ref="distributedHistory" />
	</bean>
		
	<bean id="distributedHistory" class="com.griddynamics.coherence.integration.spring.ServiceCacheDefinition" lazy-init="true">
		<property name="cacheService" ref="distributedService" />
		<property name="mapListener" ref="historyListener" />
		<property name="backingMap" ref="localMap" />
	</bean>
	
	<bean id="cacheEvents" class="java.util.ArrayList" />
	
	<bean id="historyListener" class="com.griddynamics.coherence.integration.spring.HistoryListener" scope="prototype">
		<property name="history" ref="cacheEvents" />
	</bean>
		
	<bean id="localMap" class="com.griddynamics.coherence.integration.spring.LocalCacheFactory" scope="prototype">
		<property name="highUnits" value="1000" />
		<property name="evictionType" value="HYBRID" />
		<property name="expiryDelayMillis" value="30000" />
		<property name="flushDelayMillis" value="60000" />
	</bean>
	
	<bean id="cacheStore" class="com.tangosol.net.cache.MapCacheStore" scope="prototype">
		<constructor-arg>
			<bean class="java.util.HashMap">
				<constructor-arg>
					<map>
						<entry key="aaa" value="12323" />
						<entry key="bbb" value="asdsad" />
					</map>
				</constructor-arg>
			</bean>
		</constructor-arg>
	</bean>
	
	<bean id="rwBackingMap" class="com.griddynamics.coherence.integration.spring.ReadWriteBackingMapDefinition" lazy-init="true">
		<property name="loader" ref="cacheStore" />
		<property name="internalMap" ref="localMap" />
	</bean>
	
	
	<bean id="distributed" class="com.griddynamics.coherence.integration.spring.ServiceCacheDefinition" lazy-init="true">
		<property name="cacheService" ref="distributedService" />
		<property name="backingMap" ref="localMap" />
	</bean>
	
	<bean id="distributedNearCache" class="com.griddynamics.coherence.integration.spring.NearCacheFactory" lazy-init="true">
		<property name="frontMap">
			<bean class="com.griddynamics.coherence.integration.spring.LocalCacheFactory">
				<property name="highUnits" value="10000" />
				<property name="evictionType" value="HYBRID" />
			</bean>
		</property>
		<property name="backingCacheDefinition" ref="distributed"/>
		<property name="invalidationStrategy" value="present" />
	</bean>
		
</beans>
