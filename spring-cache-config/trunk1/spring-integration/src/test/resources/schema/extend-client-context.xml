<beans:beans xmlns="http://gridkit.org/schema/coherence/spring-cache-config"
	   xmlns:beans="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       				http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       				http://gridkit.org/schema/coherence/spring-cache-config spring-cache-config.xsd"
       default-lazy-init="true"
>

	<coherence-config>

		<!-- Actual cache defined in simple-coherence-context.xml -->
		<named-cache id="cache.A" cache-name="A"/>
		<named-cache-scheme id="A">
			<service><beans:ref local="remote-cache-service"/></service>
		</named-cache-scheme>
		
		<!-- Coherence*Extend Remote Cache Service -->
		<remote-cache-service-scheme id="remote-cache-service">
			<service-name>ExtendTcpCacheService</service-name>
			<initiator-config>
				<outgoing-message-handler>
					<request-timeout>5s</request-timeout>				
				</outgoing-message-handler>
				<tcp-initiator>
					<remote-addresses>
						<socket-address>
							<address>localhost</address>
							<port>9099</port>
						</socket-address>
						<socket-address>
							<address>localhost</address>
							<port>9199</port>
						</socket-address>
					</remote-addresses>
					<connect-timeout>10s</connect-timeout>
				</tcp-initiator>
			</initiator-config>
		</remote-cache-service-scheme>
		
		<!-- Coherence*Extend Remote Invocation -->
		<service-instance id="remote-exec-service" scheme-name="remote-invocation-service"/>
		
		<remote-invocation-service-scheme id="remote-invocation-service">
			<service-name>ExtendTcpInvocationService</service-name>
			<initiator-config>
				<outgoing-message-handler>
					<request-timeout>5s</request-timeout>				
				</outgoing-message-handler>
				<tcp-initiator>
					<remote-addresses>
						<socket-address>
							<address>localhost</address>
							<port>9099</port>
						</socket-address>
						<socket-address>
							<address>localhost</address>
							<port>9199</port>
						</socket-address>
					</remote-addresses>
					<connect-timeout>10s</connect-timeout>
				</tcp-initiator>
			</initiator-config>
		</remote-invocation-service-scheme>
		
	</coherence-config>
		
</beans:beans>
