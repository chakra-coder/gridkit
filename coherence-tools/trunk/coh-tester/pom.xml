<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.gridkit.coherence-tools</groupId>
        <artifactId>coherence-tools-parent</artifactId>
        <version>1.3</version>
    </parent>

    <artifactId>coh-tester</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <name>Coherence test utils</name>
    <description>Utility classes for unit and integration testing</description>

    <scm>
        <connection>scm:svn:http://gridkit.googlecode.com/svn/coherence-tools/trunk/coh-tester</connection>
        <developerConnection>scm:svn:https://gridkit.googlecode.com/svn/coherence-tools/trunk/coh-tester</developerConnection>
        <url>http://gridkit.googlecode.com/svn/coherence-tools/trunk/coh-tester</url>
    </scm>

    <!-- this repository is required to get parent POM -->
    <repositories>
        <!-- GridKit maven2 repository -->
        <repository>
            <id>gridkit-releases</id>
            <name>gridkit-repo.googlecode.com</name>
            <url>http://gridkit.googlecode.com/svn/repo/</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>never</updatePolicy>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>

    <properties>
        <coherence.version>3.7.1.3</coherence.version>
        <junit.version>4.8.2</junit.version>
    </properties>

    <dependencies>
        <!-- Coherence -->
        <dependency>
            <groupId>com.oracle.coherence</groupId>
            <artifactId>coherence</artifactId>
            <version>${coherence.version}</version>
            <optional>true</optional>
        </dependency>

        <!-- Note that JUnit is added with compile scope -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit.version}</version>
        </dependency>
        
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-all</artifactId>
            <version>1.1</version>
            <scope>test</scope>
        </dependency>
        
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.7.2</version>
            </plugin>
        </plugins>
    </build>
</project>
